# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-replace-in-production

# Database (PostgreSQL) - Set to True to use PostgreSQL instead of SQLite
USE_POSTGRES=False
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (Frontend URLs) - Add your frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google OAuth Config
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=google-callback-url-from-backend
GOOGLE_AUTH_SCOPE=email,profile

# Google Service Account Config
GCP_SERVICE_ACCOUNT_KEY=

# Google Cloud Storage
BUCKET_NAME=

# Trending Analysis Settings
TRENDING_MODEL_NAME=paraphrase-albert-small-v2
TRENDING_SIMILARITY_THRESHOLD=0.7
TRENDING_BATCH_SIZE=16
